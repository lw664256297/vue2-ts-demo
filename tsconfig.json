{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "importHelpers": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "_c/*": ["src/components/*"]
    },
    "lib": ["es5", "es2015.promise", "es2015.generator", "dom"],
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/**/*.vue", "typings/**/*.ts"],
  "exclude": ["node_modules", "./dist", "./static"]
}
